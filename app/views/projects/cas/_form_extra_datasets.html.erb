<fieldset>
  <legend>Extra Datasets</legend>
  <table class="table table-hover">
    <tbody>
      <thead>
        <tr>
          <th width="42%" style="border-top: 0px;">Dataset name</th>
          <th colspan="2" style="text-align:center; border-top: 0px;">Level 1</th>
          <th colspan="2" style="text-align:center; border-top: 0px;">Level 2</th>
          <th colspan="2" style="text-align:center; border-top: 0px;">Level 3</th>
        </tr>
      </thead>
        <%= form.fields_for :project_datasets, @project.project_datasets.sort_by { |x| - x.dataset_id } do |pd| %>
          <tr>
            <%= pd.hidden_field :dataset_id, value: pd.object.dataset_id %>
            <td><%= pd.object.dataset.name %></td>
              <%= pd.fields_for :project_dataset_levels, pd.object.project_dataset_levels.sort_by { |x| - x.access_level_id } do |pdl| %>
                <%= pdl.hidden_field :access_level_id, value: pdl.object.access_level_id %>
                <td><%= pdl.check_box :selected, readonly_value: check_icon(pdl.object.selected) %></td>
                <td><%= pdl.datepicker_field :expiry_date, placeholder: "Expiry date" %></td>
              <% end %>
          </tr>
        <% end %>
    </tbody>
  </table>
</fieldset>
